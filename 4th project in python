x = input("which door do you want to open :\n")
if x.lower() == "red" :
  print(''' great! now you entered a room .
  you found three boxes : 🎁 white , 🎁 black , 🎁 green.''')
  y = input("which box do you want to open ?\n" )
  if y.lower() == "white" :
    print("oops! you opened a box filled eith snakes 🐍🐍🐍")
  elif y.lower() == "black" :
    print("oops! you opened a box filled spiders🕸️🕷️🕸️🕷️🕸️🕷️🕸️🕷️")
  elif y.lower() == "green" :
    print(f"congratulation! you found the treasure!! 🎉🏅\n ")
    v = input("please type open to open the treasure\n")
